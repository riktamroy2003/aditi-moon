<script>
/* Start screen */
const startBtn = document.getElementById("startBtn");
const startScreen = document.getElementById("startScreen");
const mainContent = document.getElementById("mainContent");

startBtn.onclick = ()=>{
  startScreen.style.opacity="0";
  startScreen.style.pointerEvents="none";
  
  setTimeout(()=>{
    mainContent.style.opacity="1";
    mainContent.style.pointerEvents="auto";
  },500);

  // Try playing music (will only work after user gesture)
  document.getElementById("bgm").play().catch(()=>{});
};

/* Heart healing */
const heart=document.getElementById("heart");
const crack=document.getElementById("crack");
const btn=document.getElementById("forgiveBtn");

heart.onclick=()=>{

  crack.style.opacity="0";      // Remove crack
  heart.classList.add("healed");// Animate heart
  
  // Sparkles
  for(let i=0;i<10;i++){
    let s=document.createElement("div");
    s.className="sparkle";
    s.style.left="70px";
    s.style.top="70px";
    heart.appendChild(s);
    setTimeout(()=>s.remove(),1200);
  }

  // Show button
  setTimeout(()=> btn.style.display="inline-block",1200);
};

/* Forgive Button */
btn.onclick=()=>{
  alert("Thank you, My Moon. I love you üíõ");
};
</script>

